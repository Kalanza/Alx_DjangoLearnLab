# Environment Configuration for Django HTTPS Security
# ===================================================

# Production Environment (.env.production)
# For production deployment with HTTPS
DEBUG=False
USE_HTTPS=True
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database (Update with your production database)
DATABASE_URL=postgresql://user:password@localhost:5432/libraryproject

# Security (Production Settings)
SECRET_KEY=your-super-secure-secret-key-here-minimum-50-characters-long

# Email (Production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Static/Media Files (Production)
STATIC_URL=/static/
STATIC_ROOT=/var/www/libraryproject/static/
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/libraryproject/media/

# SSL Certificate Paths (if using custom certificates)
SSL_CERTIFICATE_PATH=/etc/ssl/certs/yourdomain.com.crt
SSL_PRIVATE_KEY_PATH=/etc/ssl/private/yourdomain.com.key

# Additional Security
SECURE_PROXY_SSL_HEADER_NAME=HTTP_X_FORWARDED_PROTO
SECURE_PROXY_SSL_HEADER_VALUE=https
